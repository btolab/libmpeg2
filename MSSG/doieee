#! /bin/sh

# perform IEEE 1180 test series

ieeetest 0 0 0 0

ieeetest -256 255 1 10000
ieeetest -5 5     1 10000
ieeetest -300 300 1 10000

ieeetest -256 255 -1 10000
ieeetest -5 5     -1 10000
ieeetest -300 300 -1 10000

ieeetest -256 255 1 1000000
ieeetest -5 5     1 1000000
ieeetest -384 383 1 1000000

ieeetest -256 255 -1 1000000
ieeetest -5 5     -1 1000000
ieeetest -384 383 -1 1000000
